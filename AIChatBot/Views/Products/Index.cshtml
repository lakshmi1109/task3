@model IEnumerable<ECommerceApp.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Our Products</h1>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <h6 class="card-subtitle mb-2 text-muted">@item.Price.ToString("C")</h6>
                </div>
                <div class="card-footer">
                    <a asp-controller="Cart" asp-action="AddToCart" asp-route-id="@item.Id" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
        </div>
    }
</div>